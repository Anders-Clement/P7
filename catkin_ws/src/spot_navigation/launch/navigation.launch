<launch>


    <node name="map_server" pkg="map_server" type="map_server" args="$(find spot_navigation)/map/map.pgm 0.05"/>

 <!--- Run AMCL --> 
    <include file="$(find amcl)/examples/amcl_omni.launch" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <remap from="odom" to="/spot/odometry" />
        <rosparam file="$(find spot_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find spot_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find spot_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find spot_navigation)/config/global_costmap_params.yaml" command="load" /> 
        <rosparam file="$(find spot_navigation)/config/base_local_planner_params.yaml" command="load" />
    </node>
</launch>